/**
 * Animations
 */
@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  
  100% {
    transform: rotate(359deg);
  }    
}

@keyframes scrollDown {
  0% {
    top: calc(-24px - 1rem);
  }
  
  80% {
    top: calc(-12px - 1rem);
  }
  
  100% {
    top: calc(-24px - 1rem);
  }
}

@keyframes scrollUp {
  0% {
    top: 1rem;
  }
  
  80% {
    top: calc(1em - 12px);
  }
  
  100% {
    top: 1rem;
  }
}

@keyframes fadeOut {
  0% {
    opacity: 1;
    visibility: visible;
  }
  
  100% {
    opacity: 0;
    visibility: hidden;
  }
}

@keyframes fadeIn {
  0% {
    opacity: 0;
    visibility: hidden;
  }
  
  100% {
    opacity: 1;
    visibility: visible;
  }
}
